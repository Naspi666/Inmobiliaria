<% layout('layouts/main.ejs')%>
<div class="container">
    <div class="row">
        <!-- FORM-->
        <div class="col-md-7 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <h3 class="offset-md-5">Sign In</h3>
                    <form action="/signin" method="post">
                        <div class="form-group">
                            <input class="form-control" type="email" name="email" placeholder="Add A Email">
                        </div>
                        <div class="form-group mb-4">
                            <input class="form-control" type="password" name="password" placeholder="Add a Password">
                        </div>
                        <button class="btn btn-primary offset-md-5" type="submit">
                            Sign In
                        </button>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>