{{!-- IMAGE UPLOAD FORM --}}
<div class="card bg-dark text-white">

  <div class="card-header d-flex justify-content-between align-items-center">
    <div>
      <i class="far fa-image"></i> Upload a Property
    </div>
    {{#unless user}}
    <button class="btn btn-secondary" id="btn-toggle-notUser">
      <i class="fa fa-comments-o"></i> Post a Property
    </button>
    {{else}}
    <button class="btn btn-info" id="btn-toggle">
      <i class="fa fa-comments-o"></i> Post a Property
    </button>
    {{/unless}}
  </div>

  <div class="card-body mb-4">
    <form action="/images/{{ user.email }}/create" method="POST" enctype="multipart/form-data">

    <blockquote id="post">
      <div class="form-group">
        <div class="input-group">
          <div class="custom-file">
            <input type="file" name="image" class="custom-file-input" id="inputGroupFile"
              aria-describedby="inputGroupFileAddon" required />
            <label class="custom-file-label" for="inputGroupFile">Choose file</label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <input type="text" name="title" class="form-control bg-dark text-white border border-success"
          placeholder="Title" required>
      </div>

      <div class="form-group">
        <input type="text" name="type" class="form-control bg-dark text-white border border-success"
          placeholder="Type" required>
      </div>

      <div class="form-group">
        <input type="text" name="zone" class="form-control bg-dark text-white border border-success"
          placeholder="Zone" required>
      </div>

      <div class="form-group">
        <input type="text" name="numrooms" class="form-control bg-dark text-white border border-success"
          placeholder="Number Rooms" required>
      </div>

      <div class="form-group">
        <textarea name="description" rows="2" class="form-control bg-dark text-white border border-success"
          placeholder="Deescription" required></textarea>
      </div>

      <div class="form-group">
        <button class="btn btn-success">
          <i class="fa fa-upload"></i> Upload
        </button>
      </div>

    </form>
    </blockquote>
  </div>
</div>